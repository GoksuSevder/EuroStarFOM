@using EuroStarFOM.Models.Siniflar
@model  List<SatisHaraket>
@{
    ViewBag.Title = "CariSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>
    @ViewBag.CariAdi
</h2>
<div class="panel">
    <div class="panel-hdr bg-danger-900 bg-info-gradient">
        <h2>Cari Satış </h2>
        <div class="panel-toolbar">

        </div>
    </div>
    <div class="panel-container show">
        <div class="panel-content">

            <table id="dt-basic-example" class="table  table-hover table-light table-responsive-sm table-light table-striped ">
                <thead class=" bg-info-900 ">
                    <tr>
                        <th>Satış ID</th>
                        <th>Ürün</th>
                        <th>Personel</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                        <th>Tarih</th>
                        <th>Yazdır</th>
                    </tr>
                </thead>
                <tbody>
                    <tr></tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SatisID</td>

                            <td>@item.Urun.UrunAd</td>
                            <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                           
                            <td>@item.Fiyat</td>
                            <td>@item.Adet</td>
                            <td>@item.ToplamTutar</td>
                            <td>@item.Tarih</td>
                            <td>
                                <a href="#" title="Yazdır" class="btn btn-secondary btn-icon rounded-circle waves-effect waves-themed">
                                    <i class="fal fa-print"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>



@section ScriptsBlock {
    <script src="~/smartadmin-html-full/dist/js/datagrid/datatables/datatables.bundle.js"></script>
    <script>


        var table = $('#dt-basic-example').DataTable({
            responsive: true,
            orderCellsTop: true,
            fixedHeader: true,

            select: true,
            language: {
                searchPlaceholder: 'Ara',
                lengthMenu: 'Satır Sayısı <select name="dt-basic-example_lenght" aria-controls="dt-basic-exampl" class="form-control custom-select"  style="margin-right:10px;"><option value="10">10</option><option value="20">20</option><option value="50"> 50</option><option value="-1">Hepsi</option></select >',
                info: ""
            }
        });

    </script>
}