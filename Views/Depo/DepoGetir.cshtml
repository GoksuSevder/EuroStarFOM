@model EuroStarFOM.Models.Siniflar.Depo
@{
    ViewBag.Title = "DepoGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-hdr bg-danger-900 bg-info-gradient">
        <h2>Depo Güncelle</h2>
        <div class="panel-toolbar">

        </div>
    </div>
    <div class="panel-container show">
        <div class="panel-content">
            @using (Html.BeginForm("DepoGuncelle", "Depo", FormMethod.Post))
            {
                <div class="row">
                    @Html.HiddenFor(x => x.DepoId)
                    <div class="col-4">
                        @Html.Label("Depo Ad", new { @style = "font-weight: bold;" })
                        @Html.TextBoxFor(x => x.DepoAd, new { @class = "form-control is-valid" })
                        <div class="invalid-feedback">Lütfen Depo Adı Giriniz.</div>
                        <div class="valid-feedback"><i class="ni ni-check fa-1x"> Teşekkürler</i></div>
                    </div>
                    <div class="col-8">
                        @Html.Label("Açıklama", new { @style = "font-weight: bold;" })
                        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <br />

                <button class="btn btn-warning">Güncelle</button>
            }

        </div>
    </div>
</div>
@section ScriptsBlock{
    <script>
        $(document).ready(function () {
            $("#DepoAd").change(function () {
                if ($("#DepoAd").val() != "") {
                    $("#DepoAd").removeClass("is-invalid");
                    $("#DepoAd").addClass("is-valid");

                } else {
                    $("#DepoAd").removeClass("is-valid");
                    $("#DepoAd").addClass("is-invalid");
                   

                }
            });

        });
    </script>
}