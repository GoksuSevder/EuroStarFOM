@model EuroStarFOM.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-hdr bg-danger-900 bg-info-gradient">
        <h2>Kategori Ekle</h2>
        <div class="panel-toolbar">

        </div>
    </div>
    <div class="panel-container show">
        <div class="panel-content">
            <form class="form-group" method="post">
                <div class="row">
                    <div class="col-4">
                        @Html.Label("Kategori Ad", new { @style = "font-weight: bold;" })
                        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control is-invalid" })
                        <div class="invalid-feedback">Lütfen Kategori Adı Giriniz.</div>
                        <div class="valid-feedback"><i class="ni ni-check fa-1x"> Teşekkürler</i></div>
                    </div>
                </div>

                <br />
                <button class="btn btn-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

@section ScriptsBlock{
    <script>
        $(document).ready(function () {
            $("#KategoriAd").change(function () {
                if ($("#KategoriAd").val() == "") {

                    $("#KategoriAd").removeClass("is-valid");
                    $("#KategoriAd").addClass("is-invalid");

                } else {
                    $("#KategoriAd").removeClass("is-invalid");
                    $("#KategoriAd").addClass("is-valid");

                }
            });

        });
    </script>
}
