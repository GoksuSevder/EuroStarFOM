@using EuroStarFOM.Models.SinifModel
@model StokUrunEkleModel
@{
    ViewBag.Title = "StokUrunEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-hdr bg-danger-900 bg-info-gradient">
        <h2>Stok Ekle </h2>
        <div class="panel-toolbar">

        </div>
    </div>
    <div class="panel-container show">
        <div class="panel-content">
            <form class="form-group" method="post">
                <input type="hidden" name="@Model.Urun.UrunID" value="@Model.Urun.UrunID" />
                <div class="row">
                    <div class="col-4">
                        <div class="form-group ">
                            <label class="col-form-label"><strong>Stok Kodu</strong></label>
                            <input type="text" id="StokKod" name="StokKod" value="@Model.Stok.StokKod" class="form-control border-top-left-radius-3 border-bottom-left-radius-3" />
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group ">
                            <label class="col-form-label"><strong>Miktar</strong></label>
                            <input type="number" id="Miktar" name="Miktar" value="@Model.Stok.Miktar" class="form-control border-top-left-radius-3 border-bottom-left-radius-3" />
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group ">
                            <label class="col-form-label"><strong>Açıklama</strong></label>
                            <input type="text" id="Aciklama" name="Aciklama" value="@Model.Stok.Aciklama" class="form-control border-top-left-radius-3 border-bottom-left-radius-3" />
                        </div>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-4">
                        <div class="form-group ">
                            <label class="col-form-label"><strong>Depo</strong></label>
                            <select class="select2 form-control w-100" id="DepoId" name="DepoId">
                                @foreach (var item in Model.DepoDeger)
                                {
                                    if (item.DepoId == Model.Stok.DepoId)
                                    {
                                        <option value="@item.DepoId" selected>@item.DepoAd</option>
                                    }
                                    else
                                    {
                                        <option value="@item.DepoId">@item.DepoAd</option>

                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <br />
                <button class="btn btn-primary"> Kaydet </button>

            </form>
        </div>
    </div>
</div>


